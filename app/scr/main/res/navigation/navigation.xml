<?xml version="1.0" encoding="UTF-8"?>
<navigation xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  app:startDestination='@id/mainFragment'>
  <fragment
    // This is the main page
    android:id="@+id/mainFragment"
    android:name="com.christian.rune.mainFragment"
    android:label="fragment_main"
    // This is the dir for the file
    tools:layout="@layout/fragment_main" >
    <action
      // The name
      android:id="@+id/action_mainFragment_to_homeFragment"
      // The destination of the screen
      app:destination="@id/homeFragment" />
    </fragment>
    <fragment
      android:id="@+id/homeFragment"
      android:name="com.christian.rune.homeFragment"
      android:label="fragment_home"
      tools:layout="@layout/fragmentHome"
    <navigation android:id="@+id/homeFragment" app:startDestination="@id/website"
      <fragment
        android:id="@+id/website"
        android:name="com.christian.rune.chooseRecipient"
        android:label="fragment_web"
        tools:layout="@layout/fragment_web">
      </fragment>
    </navigation>
</navigation>
